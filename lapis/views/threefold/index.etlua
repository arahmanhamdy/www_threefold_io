    <div class="layout-inner-content">
      <h1 class="text-blue h1 mb-3">{{{ threefold.[home.vision].header }}}</h1>
      <div class="page-description mb-3">
        <p>{{{ threefold.[home.intro].content }}}</p>
      </div>
    </div>
    <div class="layout-inner-content">
      <h1 class="text-blue h1 mb-3">{{{ threefold.[home.why].header }}}</h1>
      <div class="page-description mb-3">
        <p>{{{ threefold.[home.why].content }}}</p>
      </div>
    </div>
